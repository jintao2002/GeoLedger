<?xml version="1.0" encoding="utf-8"?>
<!-- Side menu layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Welcome Text: Use @string/how_s_your_day -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_s_your_day"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"/>

    <!-- Menu Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Record: Use @string/record -->
        <LinearLayout
            android:id="@+id/menuRecord"
            style="@style/MenuItemStyle">

            <ImageView
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/account"/>

            <TextView
                style="@style/MenuTextStyle"
                android:text="@string/record"/>
        </LinearLayout>

        <!-- Language: Use @string/language -->
        <LinearLayout
            android:id="@+id/menuLanguage"
            style="@style/MenuItemStyle">

            <ImageView
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/language"/>

            <TextView
                style="@style/MenuTextStyle"
                android:text="@string/language"/>
        </LinearLayout>

        <!-- Appearance: Use @string/appearance -->
        <LinearLayout
            android:id="@+id/menuAppearance"
            style="@style/MenuItemStyle">

            <ImageView
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/appearance"/>

            <TextView
                style="@style/MenuTextStyle"
                android:text="@string/appearance"/>
        </LinearLayout>

        <!-- Report: Use @string/report -->
        <LinearLayout
            android:id="@+id/menuReport"
            style="@style/MenuItemStyle">

            <ImageView
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/report"/>

            <TextView
                style="@style/MenuTextStyle"
                android:text="@string/report"/>
        </LinearLayout>

        <!-- Terms of Use: Use @string/terms_of_use -->
        <LinearLayout
            android:id="@+id/menuTerms"
            style="@style/MenuItemStyle">

            <ImageView
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/terms"/>

            <TextView
                style="@style/MenuTextStyle"
                android:text="@string/terms_of_use_2"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Sign Out button (if needed) -->
    <LinearLayout
        android:id="@+id/menuSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
