<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title: Use @string/add_budget -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:text="@string/add_budget"
        android:textColor="#37474F"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Budget Name: Use @string/budget_name -->
    <EditText
        android:id="@+id/etBudgetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/budget_name"
        android:inputType="text"
        android:padding="12dp" />

    <!-- Amount: Use @string/amount -->
    <EditText
        android:id="@+id/etBudgetAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/amount"
        android:inputType="numberDecimal"
        android:padding="12dp" />

    <!-- Category (Spinner): Use @string-array/budget_categories -->
    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="12dp" />

    <!-- Save Button: Use @string/save_budget -->
    <Button
        android:id="@+id/btnSaveBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#56C596"
        android:text="@string/save_budget"
        android:textColor="#FFFFFF" />

    <!-- Back Button: Use @string/back -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFA726"
        android:text="@string/back"
        android:textColor="#FFFFFF" />
</LinearLayout>
