<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Cs407FinalProject" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="Theme.Cs407FinalProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Light theme colors -->
        <item name="colorPrimary">#56C596</item>
        <item name="colorPrimaryDark">#45A383</item>
        <item name="colorAccent">#FFA726</item>
        <item name="android:textColorPrimary">#37474F</item>
        <item name="android:textColorSecondary">#B0BEC5</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>

    <!-- WelcomePage theme-->
    <style name="Theme.WelcomePage" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <!-- No default style -->
        <item name="android:textViewStyle">@style/TransparentTextView</item>
        <!--  MaterialButton  -->
        <item name="materialButtonStyle">@style/CustomMaterialButton</item>
    </style>

    <!-- set TextView  -->
    <style name="TransparentTextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- set MaterialButton  -->
    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@null</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/highlightYellow</item>
        <item name="android:textColor">@color/strokeBlack</item>
    </style>
</resources>