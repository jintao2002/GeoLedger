<resources>
    <!-- 应用的全局主题 -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#56C596</item> <!-- 主色（按钮和顶部栏） -->
        <item name="colorPrimaryDark">#45A383</item> <!-- 深色状态栏 -->
        <item name="colorAccent">#FFA726</item> <!-- 强调色（关键操作） -->
        <item name="android:textColorPrimary">#37474F</item> <!-- 主要文字颜色 -->
        <item name="android:textColorSecondary">#B0BEC5</item> <!-- 次要文字颜色 -->
        <item name="android:background">#F9FAFB</item> <!-- 背景颜色 -->
    </style>

    <!-- Menu Item Style -->
    <style name="MenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Menu Icon Style -->
    <style name="MenuIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- Menu Text Style -->
    <style name="MenuTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
